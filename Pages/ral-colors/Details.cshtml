        </figure>
        <figure class="scene-preview scene-side">
            <img src="~/house-scenes/side/render.jpg" alt="@Localizer["ScenePreviewAlt"]" class="scene-image" loading="lazy" />
            <div class="scene-color-overlay @(Model.Color.NeedsDarkText ? "light-color" : "")" style="background-color: @Model.Color.Hex;"></div>
            <figcaption>@Localizer["SceneFacade", Model.Color.Number]</figcaption>
        </figure>
        <figure class="scene-preview scene-terrace">
            <img src="~/house-scenes/terrace/render.jpg" alt="@Localizer["ScenePreviewAlt"]" class="scene-image" loading="lazy" />
            <div class="scene-color-overlay @(Model.Color.NeedsDarkText ? "light-color" : "")" style="background-color: @Model.Color.Hex;"></div>
            <figcaption>@Localizer["SceneTerrace", Model.Color.Number]</figcaption>
        </figure>
        <figure class="scene-preview scene-window">
            <img src="~/house-scenes/window/render.jpg" alt="@Localizer["ScenePreviewAlt"]" class="scene-image" loading="lazy" />
            <div class="scene-color-overlay @(Model.Color.NeedsDarkText ? "light-color" : "")" style="background-color: @Model.Color.Hex;"></div>
            <figcaption>@Localizer["SceneWindow", Model.Color.Number]</figcaption>
        </figure>
