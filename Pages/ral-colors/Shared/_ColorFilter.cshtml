@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="color-filter mb-lg">
    <svg class="color-filter-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
    </svg>
    <input type="text"
           id="colorFilter"
           class="color-filter-input"
           placeholder="@Localizer["FilterPlaceholder"]"
           oninput="filterColors(this.value)" />
</div>
