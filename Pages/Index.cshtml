    <div class="root-colors-grid">
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="black" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #2C2C2E 0%, #000000 100%);"></div>
            <span class="root-color-name">@Localizer["Black"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="grey" class="root-color-card">
