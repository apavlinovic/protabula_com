@page
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model IndexModel
@{
    ViewData["Title"] = Localizer["HomeTitle"].Value;
    ViewData["MetaDescription"] = Localizer["MetaDescription"].Value;

    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var request = ViewContext.HttpContext.Request;
    var baseUrl = $"{request.Scheme}://{request.Host}";
}

@section Head {
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebSite",
        "name": "Protabula",
        "alternateName": "Pro Tabula",
        "url": "@baseUrl",
        "description": "@Localizer["MetaDescription"].Value",
        "inLanguage": ["en", "de"],
        "potentialAction": {
            "@@type": "SearchAction",
            "target": "@baseUrl/@currentCulture/ral-colors?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "Protabula",
        "url": "@baseUrl",
        "logo": "@baseUrl/images/og-default.png"
    }
    </script>
}

<section class="hero">
    <div class="hero-content">
        <h1>@Localizer["WelcomeHeading"]</h1>
        <p class="hero-subtitle">@Localizer["WelcomeBody"]</p>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" class="hero-cta">
            @Localizer["AllColors"]
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"/><path d="m12 5 7 7-7 7"/>
            </svg>
        </a>
    </div>
</section>

<section class="palettes">
    <h2 class="section-title">@Localizer["RalColorsHeading"]</h2>

    <div class="palette-grid">
        <a asp-page="/ral-colors/Category" asp-route-category="classic" asp-route-culture="@RouteData.Values["culture"]" class="palette-card">
            <div class="palette-colors" style="background: linear-gradient(135deg, #F3DA0B 0%, #E15501 20%, #CB2C30 40%, #A03472 55%, #1B4B9A 70%, #1E5F4D 85%, #6C6E70 100%);"></div>
            <div class="palette-meta">
                <strong>@Localizer["RalClassic"]</strong>
                <span>@Localizer["RalClassicDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Category" asp-route-category="design-plus" asp-route-culture="@RouteData.Values["culture"]" class="palette-card">
            <div class="palette-colors" style="background: linear-gradient(135deg, #E8D4B8 0%, #C17F59 18%, #8B4C6A 36%, #4A6FA5 54%, #45A77D 72%, #B8C76F 90%);"></div>
            <div class="palette-meta">
                <strong>@Localizer["RalDesignPlus"]</strong>
                <span>@Localizer["RalDesignPlusDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Category" asp-route-category="effect" asp-route-culture="@RouteData.Values["culture"]" class="palette-card">
            <div class="palette-colors" style="background: linear-gradient(135deg, #D4AF37 0%, #C0C0C0 25%, #8B7355 50%, #708090 75%, #B87333 100%);"></div>
            <div class="palette-meta">
                <strong>@Localizer["RalEffect"]</strong>
                <span>@Localizer["RalEffectDesc"]</span>
            </div>
        </a>
    </div>
</section>

