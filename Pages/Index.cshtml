            <span class="root-color-name">@Localizer["Grey"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="white" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #FFFFFF 0%, #F5F5F7 100%); box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1), inset 0 -4px 12px rgba(0,0,0,0.05), 0 2px 8px rgba(0,0,0,0.08);"></div>
            <span class="root-color-name">@Localizer["White"]</span>
