@page
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model IndexModel
@{
    ViewData["Title"] = Localizer["HomeTitle"].Value;
    ViewData["MetaDescription"] = Localizer["MetaDescription"].Value;

    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var request = ViewContext.HttpContext.Request;
    var baseUrl = $"{request.Scheme}://{request.Host}";
}

@section Head {
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebSite",
        "name": "Protabula",
        "alternateName": "Pro Tabula",
        "url": "@baseUrl",
        "description": "@Localizer["MetaDescription"].Value",
        "inLanguage": ["en", "de"],
        "potentialAction": {
            "@@type": "SearchAction",
            "target": "@baseUrl/@currentCulture/ral-colors?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "Protabula",
        "url": "@baseUrl",
        "logo": "@baseUrl/images/og-default.png"
    }
    </script>
}

<h1>@Localizer["WelcomeHeading"]</h1>
<p>@Localizer["WelcomeBody"]</p>

<section class="mt-xl">
    <h2>@Localizer["RalColorsHeading"]</h2>
    <ul class="page-list">
        <li>
            <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]">
                <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="7" rx="1"/>
                    <rect x="14" y="3" width="7" height="7" rx="1"/>
                    <rect x="3" y="14" width="7" height="7" rx="1"/>
                    <rect x="14" y="14" width="7" height="7" rx="1"/>
                </svg>
                <div class="page-content">
                    <strong>@Localizer["AllColors"]</strong>
                    <span>@Localizer["AllColorsDesc"]</span>
                </div>
            </a>
            <ul class="page-list-nested">
                <li>
                    <a asp-page="/ral-colors/Category" asp-route-category="classic" asp-route-culture="@RouteData.Values["culture"]">
                        <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                        </svg>
                        <div class="page-content">
                            <strong>@Localizer["RalClassic"]</strong>
                            <span>@Localizer["RalClassicDesc"]</span>
                        </div>
                    </a>
                </li>
                <li>
                    <a asp-page="/ral-colors/Category" asp-route-category="design-plus" asp-route-culture="@RouteData.Values["culture"]">
                        <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 8v8"/>
                            <path d="M8 12h8"/>
                        </svg>
                        <div class="page-content">
                            <strong>@Localizer["RalDesignPlus"]</strong>
                            <span>@Localizer["RalDesignPlusDesc"]</span>
                        </div>
                    </a>
                </li>
                <li>
                    <a asp-page="/ral-colors/Category" asp-route-category="effect" asp-route-culture="@RouteData.Values["culture"]">
                        <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                        </svg>
                        <div class="page-content">
                            <strong>@Localizer["RalEffect"]</strong>
                            <span>@Localizer["RalEffectDesc"]</span>
                        </div>
                    </a>
                </li>
            </ul>
        </li>
        <li>
            <a asp-page="/ral-colors/Converter" asp-route-culture="@RouteData.Values["culture"]">
                <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
                    <path d="M3 3v5h5"/>
                    <path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/>
                    <path d="M16 16h5v5"/>
                </svg>
                <div class="page-content">
                    <strong>@Localizer["Converter"]</strong>
                    <span>@Localizer["ConverterDesc"]</span>
                </div>
            </a>
        </li>
        <li>
            <a asp-page="/ral-colors/Compare" asp-route-culture="@RouteData.Values["culture"]">
                <svg class="page-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="8" height="18" rx="1"/>
                    <rect x="13" y="3" width="8" height="18" rx="1"/>
                </svg>
                <div class="page-content">
                    <strong>@Localizer["Compare"]</strong>
                    <span>@Localizer["CompareDesc"]</span>
                </div>
            </a>
        </li>
    </ul>
</section>
