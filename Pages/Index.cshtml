@page
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model IndexModel
@{
    ViewData["Title"] = Localizer["HomeTitle"].Value;
    ViewData["MetaDescription"] = Localizer["MetaDescription"].Value;

    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var request = ViewContext.HttpContext.Request;
    var baseUrl = $"{request.Scheme}://{request.Host}";
}

@section Head {
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebSite",
        "name": "Protabula",
        "alternateName": "Pro Tabula",
        "url": "@baseUrl",
        "description": "@Localizer["MetaDescription"].Value",
        "inLanguage": ["en", "de"],
        "potentialAction": {
            "@@type": "SearchAction",
            "target": "@baseUrl/@currentCulture/ral-colors?q={search_term_string}",
            "query-input": "required name=search_term_string"
        }
    }
    </script>
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "Protabula",
        "url": "@baseUrl",
        "logo": "@baseUrl/images/og-default.png"
    }
    </script>
}

<section class="hero">
    <div class="hero-colors" aria-hidden="true">
        <div class="color-band band-1"></div>
        <div class="color-band band-2"></div>
        <div class="color-band band-3"></div>
        <div class="color-band band-4"></div>
        <div class="color-band band-5"></div>
    </div>
    <div class="hero-content">
        <h1>@Localizer["WelcomeHeading"]</h1>
        <p class="hero-subtitle">@Localizer["WelcomeBody"]</p>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" class="hero-cta">
            @Localizer["AllColors"]
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"/><path d="m12 5 7 7-7 7"/>
            </svg>
        </a>
    </div>
</section>

<section class="palettes">
    <h2 class="section-title">@Localizer["RalColorsHeading"]</h2>

    <div class="palette-grid">
        <a asp-page="/ral-colors/Category" asp-route-category="classic" asp-route-culture="@RouteData.Values["culture"]" class="palette-card palette-classic">
            <div class="palette-colors">
                <span style="--c:#F3DA0B"></span>
                <span style="--c:#E15501"></span>
                <span style="--c:#CB2C30"></span>
                <span style="--c:#A03472"></span>
                <span style="--c:#1B4B9A"></span>
                <span style="--c:#1E5F4D"></span>
                <span style="--c:#826644"></span>
                <span style="--c:#6C6E70"></span>
            </div>
            <div class="palette-meta">
                <strong>@Localizer["RalClassic"]</strong>
                <span>@Localizer["RalClassicDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Category" asp-route-category="design-plus" asp-route-culture="@RouteData.Values["culture"]" class="palette-card palette-design">
            <div class="palette-colors">
                <span style="--c:#9A8B7A"></span>
                <span style="--c:#8D9A82"></span>
                <span style="--c:#BEB1A2"></span>
                <span style="--c:#6E8285"></span>
                <span style="--c:#A89C8F"></span>
                <span style="--c:#7D9EB0"></span>
                <span style="--c:#B8A99A"></span>
                <span style="--c:#94A0A6"></span>
            </div>
            <div class="palette-meta">
                <strong>@Localizer["RalDesignPlus"]</strong>
                <span>@Localizer["RalDesignPlusDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Category" asp-route-category="effect" asp-route-culture="@RouteData.Values["culture"]" class="palette-card palette-effect">
            <div class="palette-colors">
                <span style="--c:#8B8C7A"></span>
                <span style="--c:#7A8B7D"></span>
                <span style="--c:#6F7B6D"></span>
                <span style="--c:#8E9283"></span>
                <span style="--c:#A09B8B"></span>
                <span style="--c:#7C8285"></span>
                <span style="--c:#98A098"></span>
                <span style="--c:#8A9190"></span>
            </div>
            <div class="palette-meta">
                <strong>@Localizer["RalEffect"]</strong>
                <span>@Localizer["RalEffectDesc"]</span>
            </div>
        </a>
    </div>
</section>

<section class="tools">
    <h2 class="section-title">@Localizer["ToolsHeading"]</h2>

    <div class="tools-grid">
        <a asp-page="/ral-colors/Converter" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
                    <path d="M3 3v5h5"/>
                    <path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/>
                    <path d="M16 16h5v5"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Converter"]</strong>
                <span>@Localizer["ConverterDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Compare" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="18" rx="1"/>
                    <rect x="14" y="3" width="7" height="18" rx="1"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Compare"]</strong>
                <span>@Localizer["CompareDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Picker" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m2 22 1-1h3l9-9"/>
                    <path d="M3 21v-3l9-9"/>
                    <path d="m15 6 3.4-3.4a2.1 2.1 0 1 1 3 3L18 9l.4.4a2.1 2.1 0 1 1-3 3l-3.8-3.8a2.1 2.1 0 1 1 3-3l.4.4Z"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Picker"]</strong>
                <span>@Localizer["PickerDesc"]</span>
            </div>
        </a>
    </div>
</section>
