            <div class="root-color-swatch" style="background: linear-gradient(135deg, #34C759 0%, #27AE60 100%);"></div>
            <span class="root-color-name">@Localizer["Green"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="blue" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #007AFF 0%, #2980B9 100%);"></div>
            <span class="root-color-name">@Localizer["Blue"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="violet" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #AF52DE 0%, #8E44AD 100%);"></div>
            <span class="root-color-name">@Localizer["Violet"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="pink" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #FF2D55 0%, #FF6B8A 100%);"></div>
            <span class="root-color-name">@Localizer["Pink"]</span>
        </a>
        <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]" asp-route-color="brown" class="root-color-card">
            <div class="root-color-swatch" style="background: linear-gradient(135deg, #A2845E 0%, #8B4513 100%);"></div>
            <span class="root-color-name">@Localizer["Brown"]</span>
        </a>
    </div>
</section>

<section class="tools">
    <h2 class="section-title">@Localizer["ToolsHeading"]</h2>

    <div class="tools-grid">
        <a asp-page="/ral-colors/Converter" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
                    <path d="M3 3v5h5"/>
                    <path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/>
                    <path d="M16 16h5v5"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Converter"]</strong>
                <span>@Localizer["ConverterDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Compare" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="18" rx="1"/>
                    <rect x="14" y="3" width="7" height="18" rx="1"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Compare"]</strong>
                <span>@Localizer["CompareDesc"]</span>
            </div>
        </a>

        <a asp-page="/ral-colors/Picker" asp-route-culture="@RouteData.Values["culture"]" class="tool-card">
            <div class="tool-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m2 22 1-1h3l9-9"/>
                    <path d="M3 21v-3l9-9"/>
                    <path d="m15 6 3.4-3.4a2.1 2.1 0 1 1 3 3L18 9l.4.4a2.1 2.1 0 1 1-3 3l-3.8-3.8a2.1 2.1 0 1 1 3-3l.4.4Z"/>
                </svg>
            </div>
            <div class="tool-text">
                <strong>@Localizer["Picker"]</strong>
                <span>@Localizer["PickerDesc"]</span>
            </div>
        </a>
    </div>
</section>
