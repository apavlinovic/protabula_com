@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ErrorModel
@{
    ViewData["Title"] = Model.IsNotFound ? Localizer["NotFoundTitle"].Value : Localizer["ErrorTitle"].Value;
    ViewData["MetaDescription"] = Model.IsNotFound ? Localizer["NotFoundDescription"].Value : Localizer["ErrorDescription"].Value;
}

<div class="error-page">
    @if (Model.IsNotFound)
    {
        <h1>@Localizer["NotFoundHeading"]</h1>
        <p class="text-secondary mb-lg">@Localizer["NotFoundMessage"]</p>

        <div class="error-suggestions">
            <h2>@Localizer["SuggestionsHeading"]</h2>
            <ul class="page-list">
                <li>
                    <a asp-page="/Index" asp-route-culture="@RouteData.Values["culture"]">
                        @Localizer["GoHome"]
                    </a>
                </li>
                <li>
                    <a asp-page="/ral-colors/Index" asp-route-culture="@RouteData.Values["culture"]">
                        @Localizer["BrowseColors"]
                    </a>
                </li>
            </ul>
        </div>
    }
    else
    {
        <h1>@Localizer["ErrorHeading"]</h1>
        <p class="text-secondary mb-lg">@Localizer["ErrorMessage"]</p>

        <p>
            <a asp-page="/Index" asp-route-culture="@RouteData.Values["culture"]" class="btn">
                @Localizer["GoHome"]
            </a>
        </p>
    }
</div>