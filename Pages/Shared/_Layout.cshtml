@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var requestPath = Context.Request.Path.Value ?? "/";
    var queryString = Context.Request.QueryString.Value ?? string.Empty;
    var segments = requestPath.Trim('/').Split('/', StringSplitOptions.RemoveEmptyEntries);
    var hasCultureSegment = segments.Length > 0 && (segments[0] == "en" || segments[0] == "de");

    string BuildCulturePath(string culture)
    {
        if (segments.Length == 0)
        {
            return "/" + culture + queryString;
        }

        if (hasCultureSegment)
        {
            segments[0] = culture;
            return "/" + string.Join('/', segments) + queryString;
        }

        return "/" + culture + "/" + string.Join('/', segments) + queryString;
    }
}
<!DOCTYPE html>
<html lang="@currentCulture">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Protabula</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/protabula_com.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="lato-protabula_com">
        <header>
            <nav>
                <div>
                    <a asp-area="" asp-page="/Index" asp-route-culture="@currentCulture">@Localizer["SiteName"]</a>
                </div>
                <div>
                    <a asp-area="" asp-page="/ral-colors/Index" asp-route-culture="@currentCulture">@Localizer["RalColors"]</a>
                </div>
            </nav>
        </header>
        <div class="wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <footer>
            <div class="footer-links">
                <a asp-area="" asp-page="/Index" asp-route-culture="@currentCulture">@Localizer["Home"]</a>
                <a asp-area="" asp-page="/Privacy" asp-route-culture="@currentCulture">@Localizer["Privacy"]</a>
            </div>
            <div class="footer-language">
                <a href="@BuildCulturePath("en")" aria-current="@(currentCulture == "en" ? "true" : null)">EN</a>
                <span>|</span>
                <a href="@BuildCulturePath("de")" aria-current="@(currentCulture == "de" ? "true" : null)">DE</a>
            </div>
            <div class="footer-copyright">
                &copy; 2025 @Localizer["SiteName"]
            </div>
        </footer>

        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>

</html>