@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var requestPath = Context.Request.Path.Value ?? "/";
    var queryString = Context.Request.QueryString.Value ?? string.Empty;
    var segments = requestPath.Trim('/').Split('/', StringSplitOptions.RemoveEmptyEntries);
    var hasCultureSegment = segments.Length > 0 && (segments[0] == "en" || segments[0] == "de");
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";

    string BuildCulturePath(string culture)
    {
        if (segments.Length == 0)
        {
            return "/" + culture + queryString;
        }

        if (hasCultureSegment)
        {
            var newSegments = segments.ToArray();
            newSegments[0] = culture;
            return "/" + string.Join('/', newSegments) + queryString;
        }

        return "/" + culture + "/" + string.Join('/', segments) + queryString;
    }

    // Build path without query string for canonical URL
    string BuildCanonicalPath(string culture)
    {
        if (segments.Length == 0)
        {
            return "/" + culture;
        }

        if (hasCultureSegment)
        {
            var newSegments = segments.ToArray();
            newSegments[0] = culture;
            return "/" + string.Join('/', newSegments);
        }

        return "/" + culture + "/" + string.Join('/', segments);
    }

    var canonicalUrl = baseUrl + BuildCanonicalPath(currentCulture);
    var enUrl = baseUrl + BuildCanonicalPath("en");
    var deUrl = baseUrl + BuildCanonicalPath("de");

    // Page title and description for OG tags
    var pageTitle = ViewData["Title"]?.ToString() ?? "Protabula";
    var fullTitle = $"{pageTitle} | Protabula";
    var metaDescription = ViewData["MetaDescription"]?.ToString() ?? Localizer["DefaultMetaDescription"].Value;
    var ogImage = ViewData["OgImage"]?.ToString() ?? $"{baseUrl}/images/og-default.png";
}
<!DOCTYPE html>
<html lang="@currentCulture">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@metaDescription" />
    <title>@fullTitle</title>

    <!-- Favicon and theme -->
    <meta name="theme-color" content="#1a1a2e" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <link rel="icon" type="image/png" href="/app-icons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/app-icons/favicon.svg" />
    <link rel="shortcut icon" href="/app-icons/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/app-icons/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="MyWebSite" />
    <link rel="manifest" href="/app-icons/site.webmanifest" />

    <!-- Canonical and hreflang -->
    <link rel="canonical" href="@canonicalUrl" />
    <link rel="alternate" hreflang="en" href="@enUrl" />
    <link rel="alternate" hreflang="de" href="@deUrl" />
    <link rel="alternate" hreflang="x-default" href="@enUrl" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@fullTitle" />
    <meta property="og:description" content="@metaDescription" />
    <meta property="og:url" content="@canonicalUrl" />
    <meta property="og:image" content="@ogImage" />
    <meta property="og:locale" content="@(currentCulture == "de" ? "de_DE" : "en_US")" />
    <meta property="og:locale:alternate" content="@(currentCulture == "de" ? "en_US" : "de_DE")" />
    <meta property="og:site_name" content="Protabula" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@fullTitle" />
    <meta name="twitter:description" content="@metaDescription" />
    <meta name="twitter:image" content="@ogImage" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/protabula_com.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
</head>

<body>
    <div class="inter-protabula_com">
        <header>
            <nav>
                <a class="nav-logo" asp-area="" asp-page="/Index" asp-route-culture="@currentCulture">
                    <img src="~/logo.svg" alt="@Localizer["SiteName"]" height="28" />
                </a>

                <button class="nav-search-button" id="search-trigger" aria-label="@Localizer["SearchPlaceholder"]" data-culture="@currentCulture" data-placeholder="@Localizer["SearchPlaceholder"]" data-no-results="@Localizer["SearchNoResults"]">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.3-4.3"/>
                    </svg>
                </button>

                <button class="nav-hamburger" aria-label="@Localizer["MenuToggle"]" aria-expanded="false" aria-controls="nav-menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <div class="nav-menu" id="nav-menu">
                    <div class="nav-dropdown">
                        <button class="nav-dropdown-toggle" aria-expanded="false" aria-controls="ral-dropdown">
                            @Localizer["RalColors"]
                            <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="m6 9 6 6 6-6"/>
                            </svg>
                        </button>
                        <div class="nav-dropdown-menu" id="ral-dropdown">
                            <div class="dropdown-section">
                                <span class="dropdown-section-title">@Localizer["Categories"]</span>
                                <a asp-page="/ral-colors/Index" asp-route-culture="@currentCulture">@Localizer["AllColors"]</a>
                                <a asp-page="/ral-colors/Category" asp-route-category="classic" asp-route-culture="@currentCulture">@Localizer["RalClassic"]</a>
                                <a asp-page="/ral-colors/Category" asp-route-category="design-plus" asp-route-culture="@currentCulture">@Localizer["RalDesignPlus"]</a>
                                <a asp-page="/ral-colors/Category" asp-route-category="effect" asp-route-culture="@currentCulture">@Localizer["RalEffect"]</a>
                            </div>
                            <div class="dropdown-section">
                                <span class="dropdown-section-title">@Localizer["Tools"]</span>
                                <a asp-page="/ral-colors/Converter" asp-route-culture="@currentCulture">@Localizer["Converter"]</a>
                                <a asp-page="/ral-colors/Compare" asp-route-culture="@currentCulture">@Localizer["Compare"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="wrapper">
            <partial name="_Breadcrumbs" />
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <footer>
            <div class="footer-logo p-xl">
                <a class="nav-logo" asp-area="" asp-page="/Index" asp-route-culture="@currentCulture">
                    <img src="~/logo.svg" alt="@Localizer["SiteName"]" height="28" />
                </a>
                
                <div class="footer-language">
                    <a href="@BuildCulturePath("en")" aria-current="@(currentCulture == "en" ? "true" : null)">EN</a>
                    <span>|</span>
                    <a href="@BuildCulturePath("de")" aria-current="@(currentCulture == "de" ? "true" : null)">DE</a>
                </div>
            </div>
            <div class="footer-grid p-xl">
                <div class="footer-section">
                    <strong>@Localizer["FooterRalColors"]</strong>
                    <a asp-page="/ral-colors/Index" asp-route-culture="@currentCulture">@Localizer["FooterAllColors"]</a>
                    <a asp-page="/ral-colors/Category" asp-route-category="classic" asp-route-culture="@currentCulture">@Localizer["FooterClassic"]</a>
                    <a asp-page="/ral-colors/Category" asp-route-category="design-plus" asp-route-culture="@currentCulture">@Localizer["FooterDesignPlus"]</a>
                    <a asp-page="/ral-colors/Category" asp-route-category="effect" asp-route-culture="@currentCulture">@Localizer["FooterEffect"]</a>
                </div>
                <div class="footer-section">
                    <strong>@Localizer["FooterTools"]</strong>
                    <a asp-page="/ral-colors/Converter" asp-route-culture="@currentCulture">@Localizer["FooterConverter"]</a>
                    <a asp-page="/ral-colors/Compare" asp-route-culture="@currentCulture">@Localizer["FooterCompare"]</a>
                </div>
                <div class="footer-section">
                    <strong>@Localizer["FooterInfo"]</strong>
                    <a asp-area="" asp-page="/Privacy" asp-route-culture="@currentCulture">@Localizer["Privacy"]</a>
                    <a href="/sitemap.xml">@Localizer["FooterSitemap"]</a>
                </div>
            </div>
            <div class="footer-bottom p-xl">
                <p class="footer-tagline">@Localizer["FooterTagline"]</p>

                <div class="footer-copyright">
                    &copy; 2025 @Localizer["SiteName"]
                </div>
            </div>
        </footer>

        <script src="~/js/nav.js" asp-append-version="true"></script>
        <script src="~/js/search.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>

</html>